{% extends 'base.html.twig' %}

{% block title %}TVNET{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="py-96 grid h-screen place-items-center">
        <div id="toast-simple"
             class="flex items-center w-full max-w-xs p-4 space-x-4 text-{{ color }}-500 bg-white divide-x divide-gray-200 rounded-lg shadow dark:text-gray-400 dark:divide-gray-700 space-x dark:bg-gray-800"
             role="alert">
            <div class="pl-4 text-sm font-normal">{{ status_message }}</div>
        </div>
    </div>
{% endblock %}